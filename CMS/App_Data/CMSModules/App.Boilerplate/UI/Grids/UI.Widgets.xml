<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <massactions>
    <massaction name="#delete" caption="$general.delete$" behavior="OpenModal" />
  </massactions>
  <columns>
    <column source="UserWidgetIcon" caption="$general.icon$" wrap="false" localize="true" externalsourcename="#icon">
      <tooltip source="UserWidgetIcon"/>
    </column>
    <column source="UserWidgetName" caption="$general.name$" wrap="false" localize="true">
      <filter type="text" />
    </column>
    <column source="UserWidgetDescription" caption="$general.description$" wrap="false" localize="true">
      <filter type="text" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="app_boilerplate.userwidget" columns="UserWidgetInfoID, UserWidgetName, UserWidgetIcon, UserWidgetDescription" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
